{
  "version": 2,
  "buildCommand": "",
  "outputDirectory": ".",
  "installCommand": "",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://YOUR-DOTNET-API-URL.railway.app/api/:path*"
    },
    {
      "source": "/swagger/:path*",
      "destination": "https://YOUR-DOTNET-API-URL.railway.app/swagger/:path*"
    },
    {
      "source": "/weatherforecast",
      "destination": "https://YOUR-DOTNET-API-URL.railway.app/weatherforecast"
    },
    {
      "source": "/swagger",
      "destination": "https://YOUR-DOTNET-API-URL.railway.app/swagger"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        }
      ]
    },
    {
      "source": "/swagger/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
