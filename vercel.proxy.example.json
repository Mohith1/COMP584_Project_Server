{
  "version": 2,
  "comment": "This is an example configuration for proxying to an external .NET API",
  "instructions": "1. Deploy your .NET API to Railway/Render/Azure/etc. 2. Replace YOUR-DOTNET-API-URL with your actual API URL. 3. Rename this file to vercel.json",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-api.railway.app/api/:path*"
    },
    {
      "source": "/swagger/:path*",
      "destination": "https://your-api.railway.app/swagger/:path*"
    },
    {
      "source": "/weatherforecast",
      "destination": "https://your-api.railway.app/weatherforecast"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        }
      ]
    }
  ]
}


















